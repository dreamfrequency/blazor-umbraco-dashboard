<div class="text-center py-5 @CssClass">
    @if (!string.IsNullOrWhiteSpace(Icon))
    {
        <div class="mb-3">
            <i class="bi @Icon" style="font-size: 3rem; color: #6c757d;"></i>
        </div>
    }
    <h5 class="text-muted">@Message</h5>
    @if (!string.IsNullOrWhiteSpace(ActionText))
    {
        <button class="btn btn-primary mt-3" @onclick="OnAction">@ActionText</button>
    }
</div>

@code {
    [Parameter] public string Message { get; set; } = "No data found.";
    [Parameter] public string? Icon { get; set; } = "bi-inbox";
    [Parameter] public string? ActionText { get; set; }
    [Parameter] public EventCallback OnAction { get; set; }
    [Parameter] public string? CssClass { get; set; }
}
